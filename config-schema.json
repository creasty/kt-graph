{
  "$schema": "http://json-schema.org/schema",
  "$ref": "#/definitions/Config",
  "definitions": {
    "Config": {
      "description": "Root object of configuration file",
      "type": "object",
      "required": ["version", "projects"],
      "properties": {
        "version": {
          "description": "Version of the configuration file",
          "type": "integer",
          "minimum": 1,
          "maximum": 1
        },
        "projects": {
          "description": "Projects",
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "$ref": "#/definitions/Project"
            }
          },
          "propertyNames": {
            "description": "Project name",
            "pattern": "^[a-zA-Z0-9_-]+$"
          }
        }
      }
    },
    "Project": {
      "description": "Project configuration",
      "type": "object",
      "required": ["files", "typeNames"],
      "properties": {
        "files": {
          "description": "List of files to process",
          "type": "array",
          "minLength": 1,
          "items": {
            "description": "File glob pattern",
            "type": "string",
            "minLength": 1
          }
        },
        "typeNames": {
          "description": "List of type names to include in the output.\nRead more at https://github.com/creasty/kt-graph/blob/master/packages/core/src/filters.test.ts",
          "type": "array",
          "items": {
            "description": "Glob-like syntax for Kotlin type names",
            "type": "string",
            "minLength": 1
          },
          "examples": [
            "alpha[01].charlie",
            "alpha?.charlie",
            "alpha.bravo.*.delta.**",
            "**.echo.*Foo",
            "**.echo.{foxtrot,golf}.**",
            "alpha.{bravo,*charlie}.delta",
            "**.*Foo"
          ]
        },
        "unifyRules": {
          "description": "List of rules to unify identifiers",
          "type": "array",
          "items": {
            "$ref": "#/definitions/UnifyRule"
          }
        },
        "highlights": {
          "description": "List of highlights",
          "type": "array",
          "items": {
            "description": "Regular expression for type names.\nUse `/.../i` for case-insensitive matching",
            "type": "string"
          }
        }
      }
    },
    "UnifyRule": {
      "description": "Rule to unify identifiers",
      "type": "array",
      "items": [
        {
          "description": "Regular expression for type names.\nUse `/.../i` for case-insensitive matching",
          "examples": ["\\.Companion(\\.|$)", "(exposed\\.sql\\.Op)\\.\\w+"],
          "type": "string",
          "minLength": 1
        },
        {
          "description": "Replacement string for type names",
          "type": "string"
        }
      ],
      "examples": [
        ["\\.Companion\\b", ""],
        ["(exposed\\.sql\\.Op)\\.\\w+", "$1"]
      ]
    }
  }
}
